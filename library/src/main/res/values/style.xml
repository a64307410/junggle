<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme" parent="@android:style/Theme"></style>

    <style name="BaseTheme.NoTitleBar" parent="@style/BaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="NoTitle" parent="@style/BaseTheme.NoTitleBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NoTitleNoAnimation" parent="@style/NoTitle">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="FullscreenNoTitleNoAnimation" parent="@style/NoTitleNoAnimation">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


</resources>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.okwyx.client.juggle">

    <application
        android:name="com.okwyx.client.juggle.JuggleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/FullscreenNoTitleNoAnimation"
        android:label="@string/app_name">


        <activity
            android:name="com.okwyx.client.juggle.activity.SplashActivity"
            android:exported="true"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">


            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="juggle"
                    android:scheme="geekstudio" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.okwyx.client.juggle.activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">


        </activity>


    </application>




    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="20" />

</manifest>